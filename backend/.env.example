# ── App ──────────────────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
LOG_LEVEL=debug
ENABLE_WS=true

# ── Banco de Dados ───────────────────────────────────────────────────────────────
# Utilize DATABASE_URL OU as variáveis separadas abaixo
DATABASE_URL=postgresql://assistmove:assistmove123@localhost:5432/assist_move_assist

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=assist_move_assist
POSTGRES_USER=assistmove
POSTGRES_PASSWORD=assistmove123

# ── Redis ────────────────────────────────────────────────────────────────────────
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_URL=redis://127.0.0.1:6379/0
CACHE_TTL_SECONDS=300

# ── JWT / Auth ───────────────────────────────────────────────────────────────────
JWT_SECRET=dev-secret-change-me
JWT_REFRESH_SECRET=dev-refresh-secret-change-me
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d
PASSWORD_SALT_ROUNDS=12
AUTH_COOKIE_SAMESITE=lax

# ── SMTP / E-mail (opcional em desenvolvimento) ──────────────────────────────────
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
MAIL_FROM="Assist Dev" <no-reply@localhost>

# ── Segurança / Rate Limiting ────────────────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120
CORS_ORIGIN=http://localhost:5173

# ── Observabilidade ──────────────────────────────────────────────────────────────
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.2

EXTERNAL_API_KEY=
