# ── App / Front ──────────────────────────────────────────────────────────────────
NODE_ENV=development
APP_NAME=assist-move-assist
APP_URL=http://localhost:5173

# API & WebSocket (ambiente local)
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_URL=http://localhost:3000/api
VITE_WS_URL=ws://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Observabilidade / Analytics (opcional em dev)
SENTRY_DSN=
NEXT_PUBLIC_GA_MEASUREMENT_ID=
LOG_LEVEL=debug
VITE_SENTRY_DSN=
VITE_GA_MEASUREMENT_ID=

# Deploy (GitHub Actions / SSH)
VPS_HOST=dev.example.local
VPS_USER=root
VPS_PORT=22

# Docker registry (se usar imagens privadas)
REGISTRY=
REGISTRY_USER=
REGISTRY_PASSWORD=
DOCKER_IMAGE=assist-move-assist/app:dev

# TLS (dev geralmente não usa)
TLS_ENABLED=false
