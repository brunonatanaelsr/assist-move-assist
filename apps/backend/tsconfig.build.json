{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.spec.ts",
    "**/*.spec.js",
    "src/__tests__/**",
    "src/controllers/**",
    "src/jobs/**",
    "src/services/RelatorioService.ts",
    "src/services/reportsService.ts",
    "src/services/EmailService.ts",
    "src/types/report.ts",
    "src/config/security.ts",
    "src/config/upload.ts"
  ],
  "include": [
    "src/app.ts",
    "src/routes/api.ts",
    "src/routes/auth.routes.ts",
    "src/routes/beneficiarias.routes.ts",
    "src/routes/oficina.routes.ts",
    "src/routes/projeto.routes.ts",
    "src/routes/grupos.routes.ts",
    "src/routes/feed.routes.ts",
    "src/websocket/server.ts",
    "src/services/auth.service.ts",
    "src/services/oficina.service.ts",
    "src/services/projeto.service.ts",
    "src/services/feed.service.ts",
    "src/services/logger.ts",
    "src/services/formsExport.service.ts",
    "src/config/database.ts",
    "src/config/redis.ts",
    "src/utils/**/*.ts",
    "src/validators/**/*.ts",
    "src/types/**/*.d.ts",
    "src/middleware/**/*.ts"
  ]
}
